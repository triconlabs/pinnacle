<input type="file" id="upload">
<core-drawer-panel>
    {{#if inLogin}}
        <core-header-panel drawer class="drawer">
            <core-toolbar class="tall">
                <div flex class="middle"><img src= {{user.image}} id="userimg"></div>
                <div flex class="bottom">{{user.username}}</div>
                <div class="drawer-name bottom"></div>
            </core-toolbar>
            <div>
                <paper-item {{action 'profile'}}>
                    PROFILE
                </paper-item>
                {{#if admin}}
                    <paper-item {{action 'users'}}>
                        USERS
                    </paper-item>
                    <paper-item {{action 'question'}}>
                        
                            QUESTIONS
                        
                    </paper-item>
                {{/if}}
                <paper-item>
                    {{#link-to 'wordcloud'}}
                        WORDCLOUD
                    {{/link-to}}
                </paper-item>
                <paper-item {{action 'test'}}>
                    TEST
                </paper-item>
                <paper-item {{action 'feedback'}}>
                    FEEDBACK
                </paper-item>
                <paper-item {{action 'logout'}}>
                    LOGOUT
                </paper-item>
            </div>
        </core-header-panel>
    {{/if}}
    <div main class="main">
        {{outlet }}
    </div>
</core-drawer-panel>
<paper-toast id="toast" class="paper-toast-custom" text="Login failed"></paper-toast>
