<div class="todo-wrapper">
    <section id="todoapp">
        <header id="header">
            {{todo-input id="new-todo" type="text" value=newTitle action="createTodo" placeholder="What needs to be done?"}}
        </header>
        {{#if model}}
            <section id="main">
                {{#if canToggle}} {{input type="checkbox" id="toggle-all" checked=allTodos.allAreDone}} {{/if}}
                <ul id="todo-list">
                    {{#each todo in model itemController="todo" }}
                        {{#with todo}}
                        {{#view 'slide-in'}}
                            <paper-item noink class="item-list">
                                <li {{bind-attr class="todo.isCompleted:completed isEditing:editing" }}>
                                    {{#if isEditing}}
                                        {{todo-input type="text" class="edit" value=bufferedTitle focus-out="doneEditing" insert-newline="doneEditing" escape-press="cancelEditing"}}
                                    {{else}}
                                        
                                        {{paper-checkbox checked=todo.isCompleted}}
                                       <!-- {{input type="checkbox" class="toggle" checked=todo.isCompleted}} -->
                                        <label {{action "editTodo"}}>{{todo.title}}</label>
                                        <button {{action "removeTodo"}} class="destroy"></button>
                                    {{/if}}
                                </li>
                            </paper-item>
                            {{/view}}
                        {{/with}}
                    {{/each}}
                </ul>
            </section>
        {{/if}}
        {{#if model}}
            <footer id="footer">
                <span id="todo-count"><strong>{{remaining.length}}</strong>  left</span>
                <ul id="filters">
                </ul>
                {{#if completed.length}}
                    <button id="clear-completed" {{action "clearCompleted"}}>Clear completed</button>
                {{/if}}
            </footer>
        {{/if}}
    </section>
</div>
